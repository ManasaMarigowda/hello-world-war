pipeline {
    agent { label 'slave1' }
    stages {
        stage('checkout') {
            steps {
              sh "rm -rf hello-world-war "
                sh "git clone https://github.com/ManasaMarigowda/hello-world-war"
            }
  }
        stage('build') {
            steps {
    
                sh "mvn clean package"
            }
}
   stage('Depoly') {
            steps {
           sh "sudo cp /home/slave1/workspace/hello_world_war/target/hello-world-war-1.0.0.war /opt/apache-tomcat-10.1.49/webapps"
        }
    }
}
}
