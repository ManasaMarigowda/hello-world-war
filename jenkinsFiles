pipeline {
    agent { label 'slave1' }
    stages {
        stage('checkout') {
            steps {
              sh "rm -rf hello-world-war "
                sh "git clone https://github.com/ManasaMarigowda/hello-world-war"
            }
  }
        stage('build') {
            steps {
      sh "sudo apt update"
                sh "mvn clean package"
            }
}
   stage('Depoly') {
            steps {
           sh "sudo cp /var/lib/jenkins/workspace/hello_world_war/target/hello-world-war-1.0.0.war /opt/apache-tomcat-9.0.112/webapps"
        }
    }
}
}
